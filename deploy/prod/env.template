# 本番環境用環境変数テンプレート
# コピーして .env として使用してください

# GitHub Container Registry設定
REGISTRY_URL=ghcr.io/YOUR_GITHUB_USERNAME/github-traffic-api-laravel
IMAGE_TAG=latest

# タイムゾーン
TIME_ZONE=Asia/Tokyo

# MySQL設定
MYSQL_DATABASE=github_traffic_api
MYSQL_USER=github_traffic_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Redis設定
REDIS_PASSWORD=your_redis_password_here

# アプリケーション設定
APP_NAME="GitHub Traffic API"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=your_app_key_here

# データベース接続設定
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=github_traffic_api
DB_USERNAME=github_traffic_user
DB_PASSWORD=your_secure_password_here

# Redis接続設定
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# セッション・キャッシュ・キュー設定
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# GitHub API設定（各ユーザーが個別に設定）
# 注意: GITHUB_TOKENとGITHUB_OWNERは各ユーザーが管理画面で個別に設定します
# 以下の設定は後方互換性のために残していますが、使用されません
# GITHUB_TOKEN=your_github_personal_access_token
# GITHUB_OWNER=your_github_username

# phpMyAdmin設定
PMA_ARBITRARY=1
PMA_HOSTS=db
PMA_USER=github_traffic_user
PMA_PASSWORD=your_secure_password_here

# 管理者アカウント設定（AdminUserSeederで使用）
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=システム管理者