{
    // INFO: https://bufferings.hatenablog.com/entry/2020/06/11/233201
    // INFO: https://techblog.roxx.co.jp/entry/2021/04/19/132838
    "name": "GitHub-Traffic-API",
    "dockerComposeFile": "docker-compose.yml",
    // docker-compose.ymlファイル内のどのサービスをVS Codeで操作するか指定する
    "service": "app", // php:7.4-fpm のコンテナを操作する
    // ワークスペースを指定
    "workspaceFolder": "/workspace",
    // vscode でコンテナに接続した際のユーザーを指定する
    "remoteUser": "h-nishihara",
    // VSCodeを閉じたときのコンテナの挙動を指定
    "shutdownAction": "stopCompose", // default -> stopCompose
    // Claude Codeのインストール（無効化）
    // devcontainerで開いた時のvscode側の設定カスタマイズ
    "customizations": {
        // VS Code固有のプロパティを設定します
        "vscode": {
            // 拡張機能などの設定
            "settings": {
                /*****************************
                * VS Codeの基本設定
                ******************************/
                // エディターのインデントのサイズを指定（デフォルトは4）
                "editor.tabSize": 4,
                /*****************************
                * php-cs-fixer関連の設定
                ******************************/
                // 保存時に整形を実行する
                "php-cs-fixer.onsave": true,
                // HTMLファイルが含まれる場合も整形する
                "php-cs-fixer.formatHtml": true,
                // composerでphp-cs-fixerをインストールしておく
                "php-cs-fixer.executablePath": "/workspace/src/vendor/bin/php-cs-fixer",
                "php-cs-fixer.rules": "@PSR12",
                "php-cs-fixer.config": ".php-cs-fixer.php;.php-cs-fixer.dist.php;.php_cs;.php_cs.dist",
                "[php]": {
                    // PHPで使用するデフォルトのフォーマッターをインストールした拡張機能に指定する
                    "editor.defaultFormatter": "junstyle.php-cs-fixer"
                },
                /*****************************
                * phpstan関連の設定
                ******************************/
                // phpstanがインストールされているディレクトリを指定
                "phpstan.binPath": "/workspace/src",
                // phpstan.neonが格納されているディレクトリを指定
                "phpstan.configFile": "/workspace/src",
                /*****************************
                * PHP拡張機能共通の設定
                ******************************/
                // phpのバイナリファイルを指定
                "php.validate.executablePath": "/usr/local/bin/php",
                // 1009のエラーを許容する
                "intelephense.diagnostics.undefinedTypes": false,
                "intelephense.diagnostics.undefinedClassConstants": false,
                "intelephense.diagnostics.undefinedConstants": false,
                "intelephense.diagnostics.undefinedFunctions": false,
                "intelephense.diagnostics.undefinedMethods": false,
                "intelephense.diagnostics.undefinedProperties": false
            },
            // コンテナ内にインストールする拡張機能を指定する
            "extensions": [
                // PHP Debug
                "xdebug.php-debug",
                // PHP Namespace Resolver
                "MehediDracula.php-namespace-resolver",
                // PHP DocBlocker
                "neilbrayfield.php-docblocker",
                // phpstan
                "SanderRonde.phpstan-vscode",
                // PHP Intelephense
                "bmewburn.vscode-intelephense-client",
                // indent-rainbow
                "oderwat.indent-rainbow",
                // Laravel Extension Pack
                "onecentlin.laravel-extension-pack",
                // php cs fixer
                "junstyle.php-cs-fixer",
                // NGINX Configuration
                "william-voyek.vscode-nginx",
                // nginx-formatter
                "raynigon.nginx-formatter"
            ]
        }
    }
}